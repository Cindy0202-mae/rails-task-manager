<div class="container">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= task.completed ? '✅' : '⬜' %> -
        <%= link_to task.title, task_path(task) %>
        <%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
      </li>
    <% end %>
  </ul>
<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>
