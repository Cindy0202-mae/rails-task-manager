<div class="container">
  <h1 class="my-4">My Tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>
          <%= task.completed ? '✅' : '⬜' %>
          <%= link_to task.title, task_path(task), class: "text-decoration-none"%>
        </span>
        <div>
          <%= link_to edit_task_path(task), class: "btn btn-warning btn-sm mr-2" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="mt-4">
    <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
